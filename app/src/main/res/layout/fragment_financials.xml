<LinearLayout
    android:id="@+id/financialsFragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Financials"
        android:textSize="24sp"
        android:textStyle="bold" />


    <include
        layout="@layout/view_detail_section"
        android:id="@+id/stockOverview" />

    <include
        layout="@layout/view_detail_section"
        android:id="@+id/growthAndMargins"/>

    <include
        layout="@layout/view_detail_section"
        android:id="@+id/financialHealth" />

    <include
        layout="@layout/view_detail_section"
        android:id="@+id/revenueAndMargins"/>


</LinearLayout>